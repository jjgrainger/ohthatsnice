{
    "data": [
        {% for post in site.posts %}
            {
                "title": "{{ post.title }}",
                "url": "{{ post.url | prepend: site.url }}",
                "image": {{ post.image | prepend: site.cdn | jsonify }},
                "date": "{{ post.date }}",
                "date_format": "{{ post.date | date: '%B %d, %Y' }}",
                "categories": {{ post.categories | jsonify }}
            }
        {% if forloop.last == false %}
            ,
        {% endif %}
        {% endfor %}
    ]
}
